<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Thêm Hóa Đơn"
        android:textColor="#063F14"
        android:textSize="30sp"
        android:textStyle="bold" />

    <AutoCompleteTextView
        android:id="@+id/dialog_themHDCT_aCTenSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:hint="Tên Sách"
        android:padding="10sp"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/dialog_themHDCT_edtSoLuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:hint="Số Lượng"
        android:padding="10sp"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:paddingVertical="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_ThemHDCT_btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:background="@drawable/button_dialog"
            android:padding="10sp"
            android:text="Lưu"
            android:textAllCaps="false"
            android:textColor="#FCFCFC"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dialog_ThemHDCT_btnNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:background="@drawable/button_dialog"
            android:padding="10sp"
            android:text="Làm Mới"
            android:textAllCaps="false"
            android:textColor="#FCFCFC"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dialog_ThemHDCT_btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_dialog"
            android:padding="10sp"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="#FCFCFC"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>