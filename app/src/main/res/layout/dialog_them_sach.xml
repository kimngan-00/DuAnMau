<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Thêm Sách"
        android:textColor="#063F14"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/dThemSach_spnTheLoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/dThemSach_edtTenSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10sp"
        android:hint="Tên Sách"
        android:padding="10sp"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/dThemSach_edtTacGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginLeft="10sp"
        android:hint="Tác Giả"
        android:padding="10sp"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/dThemSach_imgSach"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/add_image"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/dThemSach_edtDonGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10sp"
        android:hint="Đơn Giá"
        android:padding="10sp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/dThemSach_edtSoLuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10sp"
        android:hint="Số Lượng Nhập Kho"
        android:padding="10sp"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dThemSach_btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:background="@drawable/button_dialog"
            android:padding="10sp"
            android:text="Lưu"
            android:textAllCaps="false"
            android:textColor="#FCFCFC"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dThemSach_btnNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:background="@drawable/button_dialog"
            android:padding="10sp"
            android:text="Làm Mới"
            android:textAllCaps="false"
            android:textColor="#FCFCFC"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dThemSach_btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_dialog"
            android:padding="10sp"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="#FCFCFC"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>