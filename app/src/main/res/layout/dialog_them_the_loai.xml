<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Thêm Thể Loại Sách"
        android:textColor="#063F14"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dThemTheLoai_edtTenTheLoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:hint="Tên Thể Loại"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/dThemTheLoai_edtViTri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:hint="Vị Trí"
        android:textSize="20sp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dThemTheLoai_btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:background="@drawable/button_dialog"
            android:padding="10sp"
            android:text="Lưu"
            android:textAllCaps="false"
            android:textColor="#FCFCFC"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dThemTheLoai_btnNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:background="@drawable/button_dialog"
            android:padding="10sp"
            android:text="Làm Mới"
            android:textAllCaps="false"
            android:textColor="#FCFCFC"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dThemTheLoai_btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_dialog"
            android:padding="10sp"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="#FCFCFC"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>