<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Thêm Nhân Viên"
        android:textColor="#063F14"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dialog_themNhanVien_edtHoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:hint="Họ và Tên"
        android:padding="10sp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/dialog_themNhanVien_edtTenDN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:hint="Tên Đăng Nhập"
        android:padding="10sp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/dialog_themNhanVien_edtMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:hint="Mật Khẩu"
        android:inputType="textPassword"
        android:padding="10sp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/dialog_themNhanVien_edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:hint="Email"
        android:padding="10sp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/dialog_themNhanVien_edtSDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:hint="Số Điện Thoại"
        android:padding="10sp"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dThemSach_btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_dialog"
            android:padding="10sp"
            android:text="Lưu"
            android:textAllCaps="false"
            android:layout_marginRight="10sp"
            android:textColor="#FCFCFC"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dThemSach_btnNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_dialog"
            android:padding="10sp"
            android:text="Làm Mới"
            android:layout_marginRight="10sp"
            android:textAllCaps="false"
            android:textColor="#FCFCFC"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dThemSach_btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_dialog"
            android:padding="10sp"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="#FCFCFC"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>