<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HoaDonFragment">

    <TextView
        android:id="@+id/fHoaDon_txtTieude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/nabila"
        android:gravity="center"
        android:text="Hóa Đơn"
        android:textColor="#000000"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/fHoaDon_lnTieuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fHoaDon_txtTieude"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/raw_hoadon_txtMaHD"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Mã Hóa Đơn"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/raw_hoadon_txtNgayXuat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Ngày Xuất"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/raw_hoadon_txtTongTien"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tổng Tiền"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/raw_hoadon_txtNguoiXuat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Người Xuất Hóa Đơn"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/fHoaDon_lvHoaDon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fHoaDon_lnTieuDe"
        android:divider="@color/white"
        android:dividerHeight="10dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fHoaDon_FAB_Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="35dp"
        android:background="#4CAF50"
        android:src="@drawable/add_64px"
        app:borderWidth="0sp"
        app:maxImageSize="64dp" />

</RelativeLayout>