<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/raw_sach_ivIcon"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="3"
        android:scaleType="fitXY"
        android:src="@drawable/books_64px" />

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/raw_sach_txtTenSach"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:textStyle="bold"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/raw_sach_txtTheLoai"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            />


        <TextView
            android:id="@+id/raw_sach_txtTacGia"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
             />


        <TextView
            android:id="@+id/raw_sach_txtDonGia"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
          />

        <TextView
            android:id="@+id/raw_sach_txtSoLuong"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            />
    </LinearLayout>


</LinearLayout>